  "author": {
    "name": "Bamdad Sabbagh",
    "email": "hello@bamdadsabbagh.com",
    "url": "https://bamdadsabbagh.com/"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:run",
    "build:clean": "rm -rf dist",
    "build:run": "tsc --build tsconfig.json",
    "clean": "npm run build:clean && npm run package:clean",
    "dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Node,TypeScript\" -c \"green.bold,cyan.bold\" \"npm run dev:node\" \"npm run dev:ts\"",
    "dev:node": "nodemon dist/app.js",
    "dev:ts": "tsc -w",
    "package:clean": "rm -rf node_modules",
    "package:reinstall": "npm run package:clean && npm i",
    "package:sort": "npx sort-package-json"
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http-errors": "^1.7.2"
  },
  "devDependencies": {
    "@bamdadsabbagh/eslint-config": "^1.4.55",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/http-errors": "^1.8.0",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7"
  }
}
